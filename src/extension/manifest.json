{
  "manifest_version": 3,
  "name": "Musescore Downloader",
  "version": "1.0",
  "description": "Download sheet music from Musescore with a click of a button!",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png"
    },
    "default_title": "Musescore Downloader"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "declarativeContent",
    "contentSettings",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {"service_worker" : "scripts/background.js"}
}