{
    "manifest_version": 3,
    "name": "Musescore Downloader",
    "version": "1.0",
    "description": "Download sheet music from Musescore with a click of a button!",
      "action": {
        "default_icon": {             
          "16": "images/icon16.png",
          "32": "images/icon32.png"
        },
        "default_title": "Download Score"
    },
    "permissions": ["activeTab", "scripting", "declarativeContent"],
    "host_permissions": ["https://musescore.com/*/scores/*"],
    "background": {
        "service_worker": "scripts/background.js"
    }
}